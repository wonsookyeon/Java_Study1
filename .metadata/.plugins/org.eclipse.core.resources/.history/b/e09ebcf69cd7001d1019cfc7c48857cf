package ex01;

import java.util.Scanner;

//은행 입출금기
public class Exam02 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		int num = sc.nextInt();
		int balance=0;
		
		for( ; ; ) {
			System.out.println("-------------------------------");
			System.out.println("1.입금 | 2.출금 | 3.잔액 | 4.종료");
			System.out.println("-------------------------------");
			
			switch(num) {
			case 1:
				System.out.println("1.입금");
				balance += sc.nextInt();
				break;
			case 2:
				System.out.println("2.출금");
				balance -= sc.nextInt();
				break;
			case 3:
				System.out.println("3.잔액");
				System.out.println("잔액 : " + balance);
				break;
		}
		
		
		}	
			
		
	}

}
